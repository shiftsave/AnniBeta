/*
 *  Variables
 */


// Colors
$copper   = #E2A480
$moss     = #43E57F
$carmine  = #FF4D4D

$charcoal = #1E1C1C
$slate    = #DBDBDB
$concrete = #939393
$pebble   = #EEEEEE

$paper    = #FFFFFF


// Fonts
$headlineFont = 'Reglo-Bold', serif
$bodyFont     = 'Work Sans', sans-serif
$editorFont   = 'Nitti', monospace


// Spacing
$xxs  =  pxToRem(2)
$xs   =  pxToRem(4)
$sm   =  pxToRem(8)
$md   =  pxToRem(16)
$lg   =  pxToRem(24)
$xl   =  pxToRem(48)
$xxl  =  pxToRem(96)
$huge =  pxToRem(160)


// Easing
$expo   = cubic-bezier(.19, 1, .22, 1)
$bounce = cubic-bezier(.175, .885, .32, 1.275)
$sine   = cubic-bezier(0.445, 0.05, 0.55, 0.95)


// Media Queries
$break-sm  = 480
$break-md  = 768
$break-lg  = 1200
$break-xl  = 1600
