.TextEditor
  background: $pebble
  min-height: 100vh
  padding: $xxl 0
  position: relative

  .content
    span
      line-height: 1.6

  .RichEditor
    &-editor
      padding: $lg $huge

    &-editorContainer
      background: transparent
      position: relative
      z-index: 1

    &-styleButton
      color: $copper
      cursor: pointer
      font-family: $headlineFont

    &-activeButton
      background: $charcoal
      color: $paper
      font-family: $headlineFont

  .DraftEditor
    &-root
      background-color: $pebble
      font-family: $editorFont
      font-size: pxToRem(18)
      margin: 0 auto
      line-height: 1.6
      position: relative

      +above($break-md)
        width: pxToRem(720)

    &-editorContainer
      color: $charcoal

  .Toolbar
    @extend h4
    align-items: center
    border: pxToRem(1) solid $concrete
    color: $slate
    bottom: 0
    display: flex
    font-size: 12px
    justify-content: center
    padding: 0
    position: absolute
    width: 100%
    transition: 400ms $expo

    &:hover
      color: $charcoal

    .styles,
    .stats
      align-items: center
      display: flex

      > :nth-child(n)
         border-left: pxToRem(1) solid $concrete
         padding: $md

    .stats
      > :last-child
        border-right: pxToRem(1) solid $concrete

  .public-DraftEditorPlaceholder-root
    color: rgba($charcoal, .5)
    position: absolute
    top: 0
