.ImageListWrapper
  width: 100%

.ImageList
  column-count: 1
  column-gap: 0
  padding: 0
  position relative
  display grid

  .dragHelper
    hoverShadow()
    transform: scale(1.025)
    margin-left: 8px


.ImageListItem
  .content
    transform: scale(1)
    transition transform 400ms $expo

    &:hover
      hoverShadow()
      transform: scale(1.025)

  .image
    break-inside: avoid-column
    border-bottom: pxToRem(1) solid rgba($flint, .25)
    position: relative

    img
      display: block
      height: auto
      min-height: pxToRem(300)
      max-height: pxToRem(300)
      object-fit: cover
      width: 100%


// References / Moodboard
.ImageList.references
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr))
  grid-auto-flow: row dense

  .ImageListItem
    grid-column-start: auto;
    grid-row-start: auto;
    margin: 0 $sm $md $sm


// Storyboard
.ImageList.storyboards
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr))

  +above($break-sm)
    grid-template-columns: repeat(auto-fit, minmax(500px, 1fr))

.ImageListItem
  grid-column-start: auto;
  grid-row-start: auto;
  margin: 0 $sm $md $sm



.Image-popoutButton
  position absolute
  bottom 0
  right 0
  background rgba($copper, .5)
  cursor pointer
  border none
  padding 5px
  width 30px
  height 30px
  box-sizing border-box

  &:hover
    background rgba($copper, 1.0)

  .Icon
    pointer-events none
