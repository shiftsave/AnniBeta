.TextArea
  .content
    border: pxToRem(2) solid transparent
    padding: $md
    transition: 400ms $expo

    &:hover
      border-color: $pebble

    &:focus
      outline: none

  .Button
    border-color: $pebble

    &:hover
      border-color: $concrete


  // Custom styles mapped to props

  &.active > .content
    border-color: $concrete

  &.subheading > .content
    @extend h2
    padding-top: pxToRem(20)

  &.center
    text-align: center
