.TextArea
  .content
    border: pxToRem(2) solid transparent
    padding: $md
    transition: 400ms $expo

    &:hover
      border-color: $flint

    &:focus
      outline: none

  // Custom styles mapped to props

  &.active > .content
    border-color: $concrete

  &.subheading > .content
    @extend h2
    padding-top: pxToRem(14)

  &.center
    text-align: center
